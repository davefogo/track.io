<div class="row">
  <h1>Cashflow</h1>
  <div class="pull-right range-query">
    <%= form_tag transactions_cashflow_path, method: :get do %>
      <%= text_field_tag 'search[date_from]', @search.date_from %>
      <%= text_field_tag 'search[date_to]', @search.date_to %>
      <%= submit_tag 'Search', class: 'btn search-button' %>
    <% end %>
  </div>
</div>
<div class="media">
  <div class="media-body">
    <table>
      <tbody>
        <tr>
          <td><h1>Cash</h1></td>
          <td><h3 class="amount"><%= number_to_currency(@income.sum(:amount), precision: 0) %></h3></td>
        </tr>
        <tr>
          <td><h1>Expenses</h1></td>
          <td><h3 class="amount"><%= number_to_currency(@expenses.sum(:amount), precision: 0) %></h3></td>
        </tr>
        <tr class="balance">
          <td><h3>Surplus/Deficit</h3></td>
          <td><h3 class="amount"><%= number_to_currency(@income.sum(:amount) - @expenses.sum(:amount), precision: 0) %></h3></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<br>
<br>
<p><%= link_to 'New Transaction', new_transaction_path %></p>
<p><%= link_to 'Back', root_path %><p>
