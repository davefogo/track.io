<div class="row">
  <h1> All Transactions</h1>
  <p><%= link_to 'New Transaction', new_transaction_path %></p>
  <div class="pull-right range-query">
    <%= form_tag transactions_path, method: :get do %>
      <%= text_field_tag 'search[date_from]', @search.date_from %>
      <%= text_field_tag 'search[date_to]', @search.date_to %>
      <%= submit_tag 'Search', class: 'btn search-button' %>
    <% end %>
  </div>
</div>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Type of Transaction</th>
          <th>Date</th>
          <th>Amount</th>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |t| %>
            <tr>
              <td><%= t.type_of_transaction %></td>
              <td><%= t.date %></td>
              <td><%=number_to_currency(t.amount, precision: 0)%></td>
              <td><%= t.category %></td>
              <td><%= link_to 'Edit', edit_transaction_path(t), class: 'btn btn-default' %></td>
              <td><%= link_to 'Delete', t, method: :delete, class: 'btn btn-danger' %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<p><%= link_to 'Back', root_path %></p>
