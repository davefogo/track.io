<%= form_for @transaction do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <%= f.label :amount %>
  <%= f.number_field :amount %>
  <%= f.label :type_of_transaction %>
  <%= f.select(:type_of_transaction, options_for_select([["Credit Due"], ["Credit Loan"], ["Expense"], ["Income"], ["Reimbursement"]])) %>
  <%= f.label :category %>
  <%= f.select(:category, options_for_select([["Balance"], ["Cash"], ["Credit"], ["Credit Due"], ["Condo Fee"], ["Electricity"], ["Gas"], ["Groceries"], ["Maid"], ["Loan Payment"], ["Other"], ["Reimbursement"], ["Salary"], ["Tv/Internet"]])) %>
  <%= f.submit "Save" %>
<% end %>
